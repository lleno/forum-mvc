@model Forum.Models.TworzenieTematuModel

@{
    ViewBag.Title = "Utworz";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>TworzenieTematu</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.Hidden("fid", ViewData["fid"])

        <div class="form-group">
            @Html.LabelFor(model => model.Tytul, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tytul)
                @Html.ValidationMessageFor(model => model.Tytul)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tekst, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tekst)
                @Html.ValidationMessageFor(model => model.Tekst)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Utwórz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót", "../Forum/Wyswietl", new { id = Model.fid })
</div>
